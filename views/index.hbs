{{>header}}
<title>CRUD | Home</title>
{{>navbar}}

<div class="container-fluid center-div">
    <div class="table-responsive">
        <h5 class="background text-center mt-1 p-2">Employee Record</h5>
        <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Designation</th>
            <th>Salary</th>
            <th>City</th>
            <th>State</th>
            <th></th>
            <th></th>
        </tr>
        {{#each data}}
        <tr>
            <td>{{_id}}</td>
            <td>{{name}}</td>
            <td>{{email}}</td>
            <td>{{phone}}</td>
            <td>{{dsg}}</td>
            <td>{{salary}}</td>
            <td>{{city}}</td>
            <td>{{state}}</td>
            <td><a href="/update/{{_id}}"><span class="material-symbols-outlined">edit</span></a></td>
            <td><a href="/delete/{{_id}}"><span class="material-symbols-outlined">delete_forever</span></a></td>
            <td></td>
        </tr>
        {{/each}}
    </table>
    </div>
</div>

{{>footer}}